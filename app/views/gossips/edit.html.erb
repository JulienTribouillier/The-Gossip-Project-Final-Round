<h1>Editer le Gossip</h1>

<%= form_for @gossip do |f| %>
    <div class = "form-group">
        <label>Titre du Gossip </label>
        <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class = "form-group">
        <label>Contenu du Gossip </label>
        <%= f.text_area :content, class: 'form-control' %>
    </div>
    
    <div class = "form-group">
        <button type="submit" class="btn btn-info">Modifier le Gossip</button>
        </div>
<%end%>